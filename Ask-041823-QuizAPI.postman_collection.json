							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Validate that quiz created\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData[jsonData.length - 1].name).to.eql(\"Demo Quiz\");",
							"});"
